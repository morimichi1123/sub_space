<% provide(:title,"Space List") %>
<div class="row">
  <aside class="col-md-4">
    <body>
        <div class="container">

        <h3>Space Search</h3>
        <%= form_tag(list_path, :method => 'get' ) do %>
          <%= text_field_tag :search %>
          <%= submit_tag 'Search', :title => nil %>
        <% end %>

        <% @space = Space.new unless @space %>
        <%= will_paginate @space %>
        <table border="1" style="border-collapse: collapse">
        <tr>
            <th>id</th>
            <th>name</th>
        </tr>
        <% @space.each do |space|%>
            <%= render space %>
        <% end %>
        </table>
        <%= will_paginate @space %>
        </div>
    </body>
  </aside>
</div>